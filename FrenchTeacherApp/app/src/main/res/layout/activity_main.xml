<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="French Teacher App"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.085" />

    <Button
        android:id="@+id/yelbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:backgroundTint="@color/yellow"
        android:text="Yellow"
        android:tag="yellow"
        android:onClick="sayColorInFrench"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/redbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="55dp"
        android:backgroundTint="@color/red"
        android:text="Red"
        android:tag="red"
        android:onClick="sayColorInFrench"
        app:layout_constraintStart_toStartOf="@+id/yelbtn"
        app:layout_constraintTop_toBottomOf="@+id/yelbtn" />

    <Button
        android:id="@+id/greenbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="51dp"
        android:backgroundTint="@color/green"
        android:text="Green"
        android:tag="green"
        android:onClick="sayColorInFrench"
        app:layout_constraintStart_toStartOf="@+id/redbtn"
        app:layout_constraintTop_toBottomOf="@+id/redbtn" />

    <Button
        android:id="@+id/purplebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="2dp"
        android:text="Purple"
        android:tag="purple"
        android:onClick="sayColorInFrench"
        app:layout_constraintEnd_toEndOf="@+id/greenbtn"
        app:layout_constraintTop_toBottomOf="@+id/greenbtn" />

    <Button
        android:id="@+id/blackbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="1dp"
        android:backgroundTint="@color/black"
        android:text="Black"
        android:tag="black"
        android:onClick="sayColorInFrench"
        app:layout_constraintEnd_toEndOf="@+id/purplebtn"
        app:layout_constraintTop_toBottomOf="@+id/purplebtn" />


</androidx.constraintlayout.widget.ConstraintLayout>